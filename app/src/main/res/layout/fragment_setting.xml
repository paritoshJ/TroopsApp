<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_side_drawer">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/notification_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/btn_round_view_login"
                android:padding="5dp"
                android:src="@drawable/notification_icon_new" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/brandon_med"
                android:gravity="center|left"
                android:paddingStart="10dp"
                android:text="NOTIFICATION"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!--<Switch
                android:id="@+id/notification_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />-->

            <com.social.troops.CustomSwitch.LabeledSwitch
                android:id="@+id/notification_switch"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_alignParentEnd="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="12sp"
                app:colorOn="@color/light_green"
                app:textOff=""
                app:textOn="" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="40dp"
            android:background="@color/light_grey"></View>

        <LinearLayout
            android:id="@+id/change_password_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/btn_round_view_login"
                android:padding="5dp"
                android:src="@drawable/icon_setting_pasword" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/brandon_med"
                android:gravity="center|left"
                android:paddingStart="10dp"
                android:text="CHANGE PASSWORD"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_navigate_next_grey" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="40dp"
            android:background="@color/light_grey"></View>

        <LinearLayout
            android:id="@+id/rate_us_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/btn_round_view_login"
                android:padding="5dp"
                android:src="@drawable/icon_setting_rate" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/brandon_med"
                android:gravity="center|left"
                android:paddingStart="10dp"
                android:text="RATE US"
                android:textColor="@color/black"
                android:textSize="16sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="40dp"
            android:background="@color/light_grey"></View>

        <LinearLayout
            android:id="@+id/tell_a_friend_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/btn_round_view_login"
                android:padding="5dp"
                android:src="@drawable/icon_setting_share" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/brandon_med"
                android:gravity="center|left"
                android:paddingStart="10dp"
                android:text="TELL A FRIEND"
                android:textColor="@color/black"
                android:textSize="16sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="40dp"
            android:background="@color/light_grey"></View>

        <LinearLayout
            android:id="@+id/feedback_lview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/btn_round_view_login"
                android:padding="5dp"
                android:src="@drawable/ic_feedback" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/brandon_med"
                android:gravity="center|left"
                android:paddingStart="10dp"
                android:text="CONTACT US"
                android:textColor="@color/black"
                android:textSize="16sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="40dp"
            android:background="@color/light_grey"></View>

    </LinearLayout>

    <TextView
        android:id="@+id/version_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/brandon_bld"
        android:text="App Version 1.0.1"
        android:textColor="@color/dark_grey"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>