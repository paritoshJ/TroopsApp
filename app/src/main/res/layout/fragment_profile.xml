<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:id="@+id/coordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:focusableInTouchMode="true"
            android:orientation="vertical">


            <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:layout_height="150dp">

                        <ImageView
                            android:id="@+id/place_holder_view"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:visibility="invisible"
                            android:scaleType="centerCrop"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:visibility="gone"
                            android:background="#66000000"></RelativeLayout>

                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="EDIT"
                            android:visibility="gone"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@drawable/btn_round_view"
                            android:drawableStart="@drawable/ic_camera_xx"
                            android:gravity="center"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/brandon_bld"
                            android:textColor="@color/black"/>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="34dp"
                            android:background="@drawable/btn_round__white_view"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/profile_image"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/place_holder"
                                android:layout_centerInParent="true"
                                app:civ_border_color="#fff"
                                app:civ_border_width="1dp" />

                            <TextView
                                android:id="@+id/cam_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_round_view"
                                android:drawableStart="@drawable/ic_camera_xx"
                                android:textColor="@color/black"/>


                        </RelativeLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Full Name"
                            android:textSize="14sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:fontFamily="@font/brandon_bld"/>

                        <EditText
                            android:id="@+id/user_name_Edit"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/grey_curve_background"
                            android:singleLine="true"
                            android:maxLength="20"
                            android:fontFamily="@font/brandon_reg"
                            android:paddingStart="5dp"
                            android:textColor="@color/black"
                            android:inputType="text"
                            android:textSize="14sp" />

                        <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Designation Name"
                        android:visibility="gone"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"/>

                        <RelativeLayout
                            android:visibility="gone"
                        android:id="@+id/profile_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/imageView"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/grey_curve_background"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/profile_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:singleLine="true"
                            android:paddingStart="5dp"
                            android:textColor="@color/black"
                            android:inputType="text"
                            android:textSize="14sp"
                            />
                    </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About Me"
                            android:textSize="14sp"
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black"/>

                        <EditText
                            android:layout_marginTop="5dp"
                            android:id="@+id/about_me_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/grey_curve_background"
                            android:lines="4"
                            android:visibility="gone"
                            android:padding="10dp"
                            android:gravity="top|left"
                            android:paddingStart="5dp"
                            android:textColor="@color/black"
                            android:inputType="textMultiLine"
                            android:textSize="14sp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:textSize="14sp"
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black"/>

                        <EditText
                            android:layout_marginTop="5dp"
                            android:id="@+id/address_Edit"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/grey_curve_background"
                            android:layout_centerVertical="true"
                            android:gravity="top|left"
                            android:paddingStart="5dp"
                            android:lines="4"
                            android:textColor="@color/black"
                            android:inputType="textMultiLine"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textSize="14sp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:fontFamily="@font/brandon_bld"/>


                        <EditText
                            android:id="@+id/email_Edit"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:fontFamily="@font/brandon_reg"
                            android:layout_marginTop="5dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/grey_curve_background"
                            android:singleLine="true"
                            android:paddingStart="5dp"
                            android:textColor="@color/black"
                            android:inputType="textEmailAddress"
                            android:textSize="14sp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone Number"
                            android:textSize="14sp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:fontFamily="@font/brandon_bld"/>


                            <EditText
                                android:id="@+id/mobile_Edit"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="5dp"
                                android:layout_centerVertical="true"
                                android:background="@drawable/grey_curve_background"
                                android:singleLine="true"
                                android:paddingStart="5dp"
                                android:fontFamily="@font/brandon_reg"
                                android:maxLength="12"
                                android:textColor="@color/black"
                                android:inputType="number"
                                android:textSize="14sp"
                                />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aadhar Number(Optional)"
                            android:textSize="14sp"
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black"/>

                        <RelativeLayout
                            android:visibility="gone"
                            android:id="@+id/aadhar_num_layout"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/imageView"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/grey_curve_background"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/aadhar_num_edit"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:background="@null"
                                android:singleLine="true"
                                android:paddingStart="5dp"
                                android:maxLength="12"
                                android:textColor="@color/black"
                                android:inputType="number"
                                android:textSize="14sp"
                                />
                        </RelativeLayout>

                    </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/password"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="13dp">

                    <Button
                        android:id="@+id/update_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_round_view_login"
                        android:text="Update"
                        android:textStyle="bold"
                        android:fontFamily="@font/brandon_bld"
                        android:textColor="@color/white"
                        android:textSize="13sp" />


                    <Button
                        android:id="@+id/verify_phone_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_round_view_login"
                        android:text="VERIFY PHONE NO"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                </RelativeLayout>

                </LinearLayout>

        </ScrollView>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
